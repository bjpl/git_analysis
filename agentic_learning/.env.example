# Prometheus v5 Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=9090
WS_PORT=3001
NODE_ENV=development

# AI Model Configuration
AI_MODEL=gpt-4-turbo
OPENAI_API_KEY=your_openai_api_key_here

# Voice Agent Configuration
WHISPER_API_KEY=your_whisper_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
VOICE_WAKE_WORDS=prometheus,hey metrics

# Security Configuration
TOKEN_SECRET=your_secret_token_here_min_32_chars
AUTH_ENABLED=true
ENCRYPTION_TYPE=TLS1.3
ENABLE_RBAC=true

# Database Configuration
REDIS_URL=redis://localhost:6379
METRICS_RETENTION_DAYS=30

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_DOMAINS=localhost,prometheus.local

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
SELF_MONITORING=true
METRICS_EXPORT_INTERVAL=15000

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_MS=30000
ENABLE_AGENT_MEMORY=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=prometheus-v5.log

# Feature Flags
ENABLE_VOICE_AGENT=true
ENABLE_TEXT_AGENT=true
ENABLE_AUTOMATION=true
ENABLE_PREDICTIVE_ALERTS=false

# External Integrations
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
PAGERDUTY_API_KEY=

# Performance Tuning
MAX_WEBSOCKET_CONNECTIONS=1000
QUERY_TIMEOUT_MS=30000
CACHE_TTL_SECONDS=300