# Local git configuration to prevent submodule processing
# This file ensures no submodule operations occur in this repository

[core]
    # Disable any autocrlf issues that might trigger git operations
    autocrlf = false
    # Prevent git from creating symlinks that might confuse Netlify
    symlinks = false

[submodule]
    # CRITICAL: Disable all submodule operations
    recurse = false
    fetchJobs = 0
    
[fetch]
    # Prevent recursive submodule fetching
    recurseSubmodules = false
    
[push]
    # Prevent recursive submodule pushing  
    recurseSubmodules = false
    
[status]
    # Don't show submodule summaries
    submodulesummary = 0
    
[diff]
    # Don't show submodule diffs
    submodule = false

[alias]
    # Disable submodule command entirely - safety override
    submodule = "!echo 'Submodule operations disabled for Netlify compatibility' && exit 1"