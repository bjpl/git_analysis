# VocabLens PWA Environment Variables - Comprehensive Configuration
# Copy this file to .env and fill in your actual API keys and settings
# ========================================================================

# ========================================
# APPLICATION CONFIGURATION
# ========================================
VITE_APP_NAME="VocabLens"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="AI-Powered Spanish Vocabulary Learning with Image Context"
VITE_APP_URL=http://localhost:5173
VITE_APP_ENVIRONMENT=development

# ========================================
# API KEYS (REQUIRED)
# ========================================
# Unsplash API Configuration
# Get your access key at: https://unsplash.com/developers
# Free tier: 50 requests/hour
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
VITE_UNSPLASH_SECRET_KEY=your_unsplash_secret_key_here

# OpenAI API Configuration
# Get your API key at: https://platform.openai.com/api-keys
# Monitor usage at: https://platform.openai.com/usage
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_ORGANIZATION_ID=your_openai_org_id_here

# Supabase Configuration
# Get from your Supabase project dashboard: https://supabase.com/dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# API ENDPOINTS & BASE URLS
# ========================================
VITE_UNSPLASH_API_URL=https://api.unsplash.com
VITE_OPENAI_API_URL=https://api.openai.com/v1
VITE_GOOGLE_TRANSLATE_API_URL=https://translation.googleapis.com/language/translate/v2

# ========================================
# AI MODEL CONFIGURATION
# ========================================
# OpenAI Model Selection (gpt-4o-mini is recommended for cost efficiency)
# Available models: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
VITE_OPENAI_MODEL=gpt-4o-mini
VITE_OPENAI_TEMPERATURE=0.7
VITE_OPENAI_MAX_TOKENS=1000
VITE_OPENAI_TOP_P=1
VITE_OPENAI_FREQUENCY_PENALTY=0
VITE_OPENAI_PRESENCE_PENALTY=0

# AI Generation Settings
VITE_MAX_DESCRIPTION_LENGTH=500
VITE_DEFAULT_VOCABULARY_COMPLEXITY=3
VITE_ENABLE_STREAMING_RESPONSES=true

# ========================================
# RATE LIMITING & QUOTAS
# ========================================
# General API Settings
VITE_API_TIMEOUT_MS=30000
VITE_MAX_CONCURRENT_REQUESTS=5
VITE_REQUEST_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY_MS=1000

# Service-Specific Rate Limits
# Unsplash Rate Limits (Free: 50/hour, Paid: 5000/hour)
VITE_UNSPLASH_RATE_LIMIT_PER_HOUR=50
VITE_UNSPLASH_RATE_LIMIT_PER_MINUTE=5

# OpenAI Rate Limits (varies by plan and model)
VITE_OPENAI_RATE_LIMIT_PER_MINUTE=60
VITE_OPENAI_TOKENS_PER_MINUTE=10000

# Supabase Rate Limits
VITE_SUPABASE_RATE_LIMIT_PER_MINUTE=100

# ========================================
# IMAGE CONFIGURATION
# ========================================
VITE_DEFAULT_IMAGE_SIZE=regular
VITE_SUPPORTED_IMAGE_SIZES=thumb,small,regular,full
VITE_MAX_IMAGES_PER_SEARCH=30
VITE_DEFAULT_IMAGES_PER_PAGE=12
VITE_IMAGE_CACHE_SIZE_MB=50
VITE_IMAGE_SEARCH_ORIENTATION=all
VITE_IMAGE_QUALITY=high

# ========================================
# VOCABULARY & LEARNING SETTINGS
# ========================================
VITE_DEFAULT_TARGET_LANGUAGE=es
VITE_DEFAULT_SOURCE_LANGUAGE=en
VITE_VOCABULARY_DIFFICULTY_LEVELS=5
VITE_DEFAULT_DAILY_GOAL=10
VITE_MAX_VOCABULARY_ITEMS=10000
VITE_SRS_INITIAL_INTERVAL=1
VITE_SRS_EASE_FACTOR=2.5
VITE_ENABLE_SPACED_REPETITION=true

# ========================================
# PWA & OFFLINE FEATURES
# ========================================
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_BACKGROUND_SYNC=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_OFFLINE_CACHE_SIZE_MB=100
VITE_OFFLINE_DATA_RETENTION_DAYS=30

# ========================================
# ANALYTICS & MONITORING
# ========================================
VITE_ENABLE_ANALYTICS=false
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# SECURITY CONFIGURATION
# ========================================
VITE_ENABLE_CONTENT_SECURITY_POLICY=true
VITE_ENABLE_SECURE_HEADERS=true
VITE_ENABLE_API_KEY_ROTATION=true
VITE_SESSION_TIMEOUT_MINUTES=60
VITE_ENABLE_REQUEST_SIGNING=false

# ========================================
# DEVELOPMENT & DEBUG SETTINGS
# ========================================
VITE_NODE_ENV=development
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_API_MOCKING=false
VITE_ENABLE_HOT_RELOAD=true

# Development API Keys (for testing)
VITE_DEV_UNSPLASH_ACCESS_KEY=demo_access_key
VITE_DEV_OPENAI_API_KEY=demo_openai_key

# ========================================
# FEATURE FLAGS
# ========================================
VITE_FEATURE_IMAGE_COLLECTIONS=true
VITE_FEATURE_VOCABULARY_SHARING=true
VITE_FEATURE_EXPORT_DATA=true
VITE_FEATURE_BULK_OPERATIONS=true
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_PRONUNCIATION_AUDIO=false
VITE_FEATURE_GAMIFICATION=true
VITE_FEATURE_COLLABORATIVE_LEARNING=false

# ========================================
# TRANSLATION SERVICES (OPTIONAL)
# ========================================
# Google Translate API (optional for enhanced translations)
VITE_GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
VITE_ENABLE_GOOGLE_TRANSLATE=false

# DeepL API (alternative translation service)
VITE_DEEPL_API_KEY=your_deepl_api_key_here
VITE_ENABLE_DEEPL_TRANSLATE=false

# ========================================
# DATABASE & STORAGE
# ========================================
# Supabase Storage Configuration
VITE_SUPABASE_STORAGE_BUCKET=vocabulary-images
VITE_ENABLE_FILE_UPLOADS=true
VITE_MAX_FILE_SIZE_MB=5
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Local Storage Configuration
VITE_LOCAL_STORAGE_PREFIX=vocablens_
VITE_ENABLE_LOCAL_BACKUP=true
VITE_AUTO_SYNC_INTERVAL_MINUTES=30

# ========================================
# PERFORMANCE & OPTIMIZATION
# ========================================
VITE_ENABLE_LAZY_LOADING=true
VITE_IMAGE_LAZY_LOAD_THRESHOLD=200
VITE_ENABLE_COMPRESSION=true
VITE_BUNDLE_ANALYZER=false
VITE_PRELOAD_CRITICAL_RESOURCES=true

# Cache Settings
VITE_BROWSER_CACHE_TTL_HOURS=24
VITE_API_CACHE_TTL_MINUTES=15
VITE_STATIC_ASSET_CACHE_DAYS=7

# ========================================
# UI/UX CONFIGURATION
# ========================================
VITE_DEFAULT_THEME=light
VITE_AVAILABLE_THEMES=light,dark,auto
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de,it
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUND_EFFECTS=false

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# Uncomment and modify these for production deployment
# VITE_APP_ENVIRONMENT=production
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_ERROR_REPORTING=true
# VITE_APP_URL=https://vocablens.app