# VocabLens PWA Environment Variables - Example Configuration
# Copy this file to .env and fill in your actual API keys

# Application Configuration
VITE_APP_NAME="VocabLens"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="AI-Powered Vocabulary Learning with Image Context"

# API Keys - Replace with your actual keys
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration - Replace with your project details
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Base URLs (usually don't need to change)
VITE_UNSPLASH_API_URL=https://api.unsplash.com
VITE_OPENAI_API_URL=https://api.openai.com/v1

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# Rate Limiting
VITE_API_RATE_LIMIT_PER_MINUTE=60
VITE_MAX_CONCURRENT_REQUESTS=5

# Image Configuration
VITE_DEFAULT_IMAGE_SIZE=regular
VITE_MAX_IMAGES_PER_SEARCH=30
VITE_IMAGE_CACHE_SIZE_MB=50

# AI Configuration
VITE_DEFAULT_AI_MODEL=gpt-3.5-turbo
VITE_MAX_DESCRIPTION_LENGTH=500
VITE_AI_TEMPERATURE=0.7

# Vocabulary Configuration
VITE_DEFAULT_DAILY_GOAL=10
VITE_MAX_VOCABULARY_ITEMS=10000
VITE_SRS_INITIAL_INTERVAL=1

# Security Configuration
VITE_ENABLE_CONTENT_SECURITY_POLICY=true
VITE_SECURE_HEADERS=true

# Development Configuration (only in dev mode)
VITE_DEV_TOOLS=false
VITE_LOG_LEVEL=info
# Copy this file to .env and fill in your actual API keys

# Unsplash API Configuration
# Get your API key at: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# OpenAI API Configuration  
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: GPT Model Selection
# Options: gpt-4o-mini (cheaper), gpt-4o (more capable), gpt-4 (legacy)
GPT_MODEL=gpt-4o-mini

# Optional: Application Settings
MAX_DESCRIPTION_LENGTH=500
IMAGES_PER_PAGE=12
RATE_LIMIT_DELAY=1

# Optional: Development Settings
DEBUG=false
LOG_LEVEL=INFO