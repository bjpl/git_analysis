# Configuration file for Unsplash Image Search GPT Description
# This file is automatically generated during installation
# You can modify these settings or use the application's settings dialog

[UNSPLASH]
# Your Unsplash API access key
# Get it from: https://unsplash.com/developers
ACCESS_KEY=

# Rate limiting (requests per hour)
RATE_LIMIT=5000

# Default search orientation (landscape, portrait, squarish)
DEFAULT_ORIENTATION=landscape

[OPENAI]
# Your OpenAI API key
# Get it from: https://platform.openai.com/api-keys
API_KEY=

# Model to use for descriptions (gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview)
MODEL=gpt-4

# Maximum tokens for responses
MAX_TOKENS=1000

# Temperature for creativity (0.0 to 2.0)
TEMPERATURE=0.7

[SETTINGS]
# Directory for storing user data
DATA_DIR=%USERPROFILE%\Documents\Unsplash Image Search GPT Description

# Default language for descriptions (English, Spanish, French, German)
DEFAULT_LANGUAGE=English

# Cache size in MB
CACHE_SIZE=500

# Auto-save sessions
AUTO_SAVE=true

# Check for updates automatically
AUTO_UPDATE=true

# First run flag (set to false after initial setup)
FIRST_RUN=true

# Application theme (system, light, dark)
THEME=system

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

[INTERFACE]
# Window size and position
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
WINDOW_X=-1
WINDOW_Y=-1
WINDOW_MAXIMIZED=false

# Image grid settings
GRID_COLUMNS=3
IMAGE_SIZE=medium

# Show image metadata
SHOW_METADATA=true

# Show download progress
SHOW_PROGRESS=true

[SEARCH]
# Default number of results per search
RESULTS_PER_PAGE=30

# Maximum number of results to cache
MAX_CACHED_RESULTS=1000

# Safe search (enabled, disabled)
SAFE_SEARCH=enabled

# Include color information in searches
INCLUDE_COLORS=true

[EXPORT]
# Default export format (CSV, JSON, XML)
DEFAULT_FORMAT=CSV

# Include image thumbnails in exports
INCLUDE_THUMBNAILS=false

# Export image metadata
INCLUDE_METADATA=true

# Default export directory
EXPORT_DIR=%USERPROFILE%\Documents\Unsplash Image Search GPT Description\Exports

[NETWORK]
# Connection timeout in seconds
TIMEOUT=30

# Number of retry attempts
RETRY_ATTEMPTS=3

# Use proxy server
USE_PROXY=false

# Proxy server address
PROXY_HOST=

# Proxy server port
PROXY_PORT=8080

# Proxy authentication
PROXY_USER=
PROXY_PASS=

[ADVANCED]
# Enable debug mode
DEBUG_MODE=false

# Enable telemetry (helps improve the application)
TELEMETRY_ENABLED=true

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# Image download quality (raw, full, regular, small, thumb)
DOWNLOAD_QUALITY=regular

# Enable experimental features
EXPERIMENTAL_FEATURES=false