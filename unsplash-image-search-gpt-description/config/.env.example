# VocabLens Environment Configuration
# Copy this file to .env.local and fill in your values

# Application Settings
VITE_APP_NAME="VocabLens - Visual Vocabulary Learning"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Learn vocabulary through AI-powered image descriptions"

# API Keys - Required for functionality
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration - Required for user data and progress tracking
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Analytics & Monitoring (Optional)
VITE_POSTHOG_KEY=your_posthog_key_here
VITE_POSTHOG_HOST=https://app.posthog.com

# Error Tracking (Optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true

# Performance Settings
VITE_IMAGE_CACHE_SIZE=200
VITE_API_CACHE_DURATION=300000
VITE_DESCRIPTION_CACHE_DURATION=3600000

# UI Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_THEME_COLOR=#4f46e5
VITE_BACKGROUND_COLOR=#ffffff