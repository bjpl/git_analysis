{
  "name": "vocablens-bulletproof",
  "version": "2.0.0",
  "type": "module",
  "description": "VocabLens - Bulletproof Spanish Vocabulary Learning PWA with guaranteed deployment success",
  "main": "src/main.tsx",
  "private": true,

  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run typecheck && vite build && npm run verify",
    "build:quick": "vite build",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    
    "verify": "node scripts/build-verify.js",
    "health-check": "node scripts/health-check.js",
    
    "deploy:netlify": "npm run build && netlify deploy --prod --dir dist",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:github": "npm run build && gh-pages -d dist",
    "deploy:azure": "npm run build && azure-cli storage blob upload-batch --source dist",
    
    "preview:netlify": "npm run build && netlify deploy --dir dist",
    "preview:vercel": "npm run build && vercel",
    
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "size-check": "npm run build && bundlesize"
  },

  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "lucide-react": "^0.294.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1"
  },

  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/node": "^20.11.30",
    
    "@vitejs/plugin-react-swc": "^3.5.0",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^0.19.7",
    
    "typescript": "^5.4.3",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    
    "vitest": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "@testing-library/react": "^14.2.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.0.0",
    
    "rimraf": "^5.0.5",
    "gh-pages": "^6.1.1",
    "bundlesize": "^0.18.2"
  },

  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "150kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],

  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },

  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },

  "keywords": [
    "pwa",
    "spanish",
    "vocabulary",
    "learning",
    "ai",
    "image-search",
    "education",
    "offline",
    "typescript",
    "react",
    "bulletproof",
    "reliable",
    "deployment"
  ],

  "author": {
    "name": "VocabLens Team",
    "email": "contact@vocablens.app",
    "url": "https://vocablens.app"
  },

  "license": "MIT",
  "homepage": "https://vocablens.app",

  "repository": {
    "type": "git",
    "url": "git+https://github.com/vocablens/vocablens-bulletproof.git"
  },

  "bugs": {
    "url": "https://github.com/vocablens/vocablens-bulletproof/issues"
  },

  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/vocablens"
  }
}