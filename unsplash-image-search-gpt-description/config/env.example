# Environment Variables Configuration for VocabLens PWA
# Copy this file to .env.local and fill in your actual values

# Build Environment
NODE_ENV=production
VITE_APP_ENV=production

# API Keys - Production
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: Analytics and Monitoring
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GA_MEASUREMENT_ID=your_ga_measurement_id
VITE_POSTHOG_KEY=your_posthog_key
VITE_HOTJAR_ID=your_hotjar_site_id

# Application Configuration
VITE_APP_NAME=VocabLens
VITE_APP_DESCRIPTION=Spanish Vocabulary Learning PWA
VITE_APP_URL=https://your-domain.com

# Feature Flags
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_PWA_PROMPTS=true
VITE_FEATURE_DARK_MODE=true

# Development Settings (only for local development)
VITE_DEV_SHOW_LOGS=false
VITE_DEV_MOCK_API=false

# Build Performance
NODE_OPTIONS=--max_old_space_size=4096

# Deployment Specific

# Vercel
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id

# Netlify 
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_AUTH_TOKEN=your_netlify_auth_token

# GitHub Pages
GITHUB_TOKEN=your_github_token_for_pages