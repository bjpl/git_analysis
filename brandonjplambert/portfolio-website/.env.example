# GitHub Integration
# Generate at: https://github.com/settings/personal-access-tokens
# Scope: public_repo (for fetching public repository data)
VITE_GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# EmailJS Configuration
# Sign up at: https://emailjs.com/
# Required for contact form functionality
VITE_EMAILJS_SERVICE_ID=service_your_service_id
VITE_EMAILJS_TEMPLATE_ID=template_your_template_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Analytics (Optional)
# Google Analytics 4 Measurement ID
# Format: G-XXXXXXXXXX
VITE_ANALYTICS_ID=G-XXXXXXXXXX

# Alternative: Plausible Analytics
# Your domain registered with Plausible
# VITE_PLAUSIBLE_DOMAIN=yourdomain.com

# Development Configuration
# Set to 'development' for local development
# Set to 'production' for production builds
NODE_ENV=development

# API Configuration (Optional)
# Base URL for any API calls (if needed)
VITE_API_BASE_URL=https://api.yourdomain.com

# Feature Flags (Optional)
# Enable/disable features during development
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CONTACT_FORM=true
VITE_ENABLE_DARK_MODE=true

# Performance Monitoring (Optional)
# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Social Media Links (Optional)
# Used in footer and contact sections
VITE_LINKEDIN_URL=https://linkedin.com/in/yourusername
VITE_GITHUB_URL=https://github.com/yourusername
VITE_TWITTER_URL=https://twitter.com/yourusername

# PWA Configuration (Optional)
# App name for PWA manifest
VITE_APP_NAME="Brandon Lambert - Portfolio"
VITE_APP_SHORT_NAME="Portfolio"

# Build Configuration
# Set to true to analyze bundle size
ANALYZE_BUNDLE=false

# Cloudflare Pages Configuration (CI/CD Only)
# These are set as GitHub Secrets, not in .env files
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
# CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id  
# CLOUDFLARE_PROJECT_NAME=your_cloudflare_project_name

# Testing Configuration
# Set to true to run tests in CI mode
CI=false

# Lighthouse CI Configuration (Optional)
# LHCI_GITHUB_APP_TOKEN=your_lighthouse_ci_token
# LHCI_SERVER_URL=https://your-lhci-server.com

# Code Coverage (Optional)
# CODECOV_TOKEN=your_codecov_token

# Security Configuration
# Content Security Policy nonce (generated automatically)
# CSP_NONCE=auto-generated

# Deployment Configuration
# Target deployment environment
DEPLOYMENT_ENV=production

# Maintenance Mode (Optional)
# Set to true to show maintenance page
MAINTENANCE_MODE=false