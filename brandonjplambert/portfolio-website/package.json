{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Brandon Lambert's professional portfolio website showcasing full-stack development skills and projects",
  "author": {
    "name": "Brandon Lambert",
    "email": "contact@brandonlambert.dev",
    "url": "https://brandonlambert.dev"
  },
  "homepage": "https://brandonlambert.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/brandonjplambert/portfolio-website.git"
  },
  "keywords": [
    "portfolio",
    "react",
    "typescript",
    "tailwindcss",
    "full-stack",
    "developer",
    "frontend",
    "backend"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "build:production": "set NODE_ENV=production && vite build",
    "build:analyze": "ANALYZE_BUNDLE=true vite build",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "clean": "rm -rf dist .svelte-kit node_modules/.vite",
    "postinstall": "svelte-kit sync"
  },
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^2.3.3",
    "@sveltejs/kit": "^1.30.4",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.47",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.0",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "tailwindcss": "^3.4.10",
    "terser": "^5.43.1",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vite": "^4.5.5",
    "vitest": "^1.6.0",
    "@playwright/test": "^1.45.0"
  },
  "dependencies": {
    "@emailjs/browser": "^4.3.3",
    "@prismicio/client": "^7.7.1",
    "@prismicio/svelte": "^1.2.3"
  },
  "type": "module"
}
