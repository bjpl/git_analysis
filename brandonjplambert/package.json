{
  "name": "project-workspace",
  "version": "1.0.0",
  "description": "Project workspace with Cloudflare Pages deployment",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "build:staging": "NODE_ENV=staging vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    
    "deploy": "node scripts/cloudflare-deploy.js",
    "deploy:production": "node scripts/cloudflare-deploy.js production",
    "deploy:staging": "node scripts/cloudflare-deploy.js staging",
    "deploy:preview": "node scripts/cloudflare-deploy.js preview",
    "deploy:dry-run": "node scripts/cloudflare-deploy.js preview --dry-run",
    
    "cf:optimize": "node scripts/cloudflare-performance.js",
    "cf:setup": "npm run cf:optimize && npm run deploy:preview",
    "cf:login": "wrangler login",
    "cf:whoami": "wrangler whoami",
    "cf:pages:list": "wrangler pages project list",
    "cf:pages:delete": "wrangler pages project delete",
    
    "env:setup": "cp config/cloudflare/env.example .env",
    "env:validate": "node -e \"console.log('Environment validation - implement as needed')\"",
    
    "pre-deploy": "npm run lint && npm run typecheck && npm run test",
    "post-deploy": "echo 'Deployment completed successfully!'",
    
    "clean": "rm -rf build .svelte-kit dist",
    "clean:deps": "rm -rf node_modules package-lock.json",
    "reset": "npm run clean && npm run clean:deps && npm install"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-cloudflare": "^2.3.0",
    "@sveltejs/kit": "^1.20.4",
    "@sveltejs/vite-plugin-svelte": "^2.4.2",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "svelte": "^4.0.5",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^0.34.0",
    "wrangler": "^3.10.0"
  },
  "dependencies": {
    "@prismic/client": "^7.0.0",
    "@prismic/helpers": "^2.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/project-workspace.git"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "cloudflare-pages",
    "prismic",
    "deployment"
  ],
  "author": "Your Name",
  "license": "MIT"
}