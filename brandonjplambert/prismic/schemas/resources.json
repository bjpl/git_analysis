{
  "Main": {
    "name": {
      "type": "Text",
      "config": {
        "label": "Resource Name",
        "placeholder": "e.g., Claude AI, Notion, VSCode"
      }
    },
    "category": {
      "type": "Select",
      "config": {
        "label": "Category",
        "options": [
          "AI Tools",
          "Development Tools",
          "Design Tools",
          "Productivity Tools",
          "Learning Resources",
          "Data Science Tools",
          "Cloud Services",
          "Authentication Services",
          "Monitoring Tools",
          "Other Tools",
          "Authentic Resources"
        ]
      }
    },
    "subcategory": {
      "type": "Text",
      "config": {
        "label": "Subcategory",
        "placeholder": "e.g., Code Editor, LLM, Database (optional)"
      }
    },
    "url": {
      "type": "Link",
      "config": {
        "label": "Resource URL",
        "placeholder": "Link to the resource",
        "allowTargetBlank": true,
        "select": null
      }
    },
    "logo": {
      "type": "Image",
      "config": {
        "label": "Logo/Icon",
        "constraint": {
          "width": 200,
          "height": 200
        },
        "thumbnails": [
          {
            "name": "small",
            "width": 64,
            "height": 64
          }
        ]
      }
    }
  },
  "Details": {
    "description": {
      "type": "StructuredText",
      "config": {
        "label": "Description",
        "placeholder": "What is this resource and what does it do?",
        "allowTargetBlank": true,
        "multi": "paragraph,preformatted,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item"
      }
    },
    "why_recommended": {
      "type": "StructuredText",
      "config": {
        "label": "Why I Recommend This",
        "placeholder": "Personal experience and specific reasons for recommendation",
        "allowTargetBlank": true,
        "multi": "paragraph,preformatted,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item"
      }
    },
    "use_cases": {
      "type": "Group",
      "config": {
        "label": "Use Cases",
        "repeat": true,
        "fields": {
          "use_case": {
            "type": "Text",
            "config": {
              "label": "Use Case",
              "placeholder": "Specific way to use this resource"
            }
          },
          "description": {
            "type": "Text",
            "config": {
              "label": "Description",
              "placeholder": "Brief description of this use case"
            }
          }
        }
      }
    }
  },
  "Pricing & Access": {
    "pricing_model": {
      "type": "Select",
      "config": {
        "label": "Pricing Model",
        "options": [
          "Free",
          "Freemium",
          "Paid",
          "Subscription",
          "One-time Purchase",
          "Open Source",
          "Enterprise Only",
          "Usage-based"
        ]
      }
    },
    "pricing_details": {
      "type": "Text",
      "config": {
        "label": "Pricing Details",
        "placeholder": "e.g., $10/month, Free tier available, Contact for pricing"
      }
    },
    "free_tier_available": {
      "type": "Boolean",
      "config": {
        "label": "Has Free Tier",
        "default_value": false
      }
    },
    "requires_signup": {
      "type": "Boolean",
      "config": {
        "label": "Requires Account",
        "default_value": true
      }
    }
  },
  "Technical Info": {
    "platforms": {
      "type": "Group",
      "config": {
        "label": "Supported Platforms",
        "repeat": true,
        "fields": {
          "platform": {
            "type": "Select",
            "config": {
              "label": "Platform",
              "options": [
                "Web",
                "Windows",
                "macOS",
                "Linux",
                "iOS",
                "Android",
                "Chrome Extension",
                "API",
                "CLI"
              ]
            }
          }
        }
      }
    },
    "integrations": {
      "type": "Group",
      "config": {
        "label": "Key Integrations",
        "repeat": true,
        "fields": {
          "integration": {
            "type": "Text",
            "config": {
              "label": "Integration",
              "placeholder": "e.g., Slack, GitHub, Google Drive"
            }
          }
        }
      }
    },
    "programming_languages": {
      "type": "Group",
      "config": {
        "label": "Programming Languages",
        "repeat": true,
        "fields": {
          "language": {
            "type": "Text",
            "config": {
              "label": "Language",
              "placeholder": "e.g., Python, JavaScript, TypeScript"
            }
          }
        }
      }
    }
  },
  "Experience": {
    "personal_rating": {
      "type": "Select",
      "config": {
        "label": "Personal Rating",
        "options": [
          "★★★★★ (Essential)",
          "★★★★☆ (Excellent)",
          "★★★☆☆ (Good)",
          "★★☆☆☆ (Fair)",
          "★☆☆☆☆ (Poor)"
        ]
      }
    },
    "experience_level": {
      "type": "Select",
      "config": {
        "label": "My Experience Level",
        "options": [
          "Expert User",
          "Advanced User",
          "Intermediate User",
          "Beginner User",
          "Evaluating"
        ]
      }
    },
    "time_using": {
      "type": "Text",
      "config": {
        "label": "Time Using",
        "placeholder": "e.g., 2 years, 6 months, Recently discovered"
      }
    },
    "pros": {
      "type": "Group",
      "config": {
        "label": "Pros",
        "repeat": true,
        "fields": {
          "pro": {
            "type": "Text",
            "config": {
              "label": "Pro",
              "placeholder": "What's good about this resource?"
            }
          }
        }
      }
    },
    "cons": {
      "type": "Group",
      "config": {
        "label": "Cons",
        "repeat": true,
        "fields": {
          "con": {
            "type": "Text",
            "config": {
              "label": "Con",
              "placeholder": "What could be improved?"
            }
          }
        }
      }
    }
  },
  "Alternatives": {
    "alternatives": {
      "type": "Group",
      "config": {
        "label": "Alternative Resources",
        "repeat": true,
        "fields": {
          "name": {
            "type": "Text",
            "config": {
              "label": "Alternative Name",
              "placeholder": "Name of alternative resource"
            }
          },
          "comparison": {
            "type": "Text",
            "config": {
              "label": "Comparison",
              "placeholder": "How does it compare to this resource?"
            }
          },
          "url": {
            "type": "Link",
            "config": {
              "label": "URL",
              "allowTargetBlank": true
            }
          }
        }
      }
    }
  },
  "Metadata": {
    "display_order": {
      "type": "Number",
      "config": {
        "label": "Display Order",
        "placeholder": "Lower numbers appear first"
      }
    },
    "is_featured": {
      "type": "Boolean",
      "config": {
        "label": "Featured Resource",
        "default_value": false
      }
    },
    "tags": {
      "type": "Group",
      "config": {
        "label": "Tags",
        "repeat": true,
        "fields": {
          "tag": {
            "type": "Text",
            "config": {
              "label": "Tag",
              "placeholder": "e.g., AI, Productivity, Open Source"
            }
          }
        }
      }
    },
    "last_updated": {
      "type": "Date",
      "config": {
        "label": "Last Updated",
        "default": "today"
      }
    }
  }
}