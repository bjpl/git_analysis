{
  "Main": {
    "headline": {
      "type": "StructuredText",
      "config": {
        "label": "Headline",
        "placeholder": "Main headline for the homepage",
        "allowTargetBlank": false,
        "single": "heading1,heading2,heading3,strong,em"
      }
    },
    "bio": {
      "type": "StructuredText",
      "config": {
        "label": "Bio",
        "placeholder": "Personal bio and introduction",
        "allowTargetBlank": true,
        "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
      }
    },
    "headshot": {
      "type": "Image",
      "config": {
        "label": "Headshot",
        "constraint": {
          "width": 800,
          "height": 800
        },
        "thumbnails": [
          {
            "name": "small",
            "width": 200,
            "height": 200
          },
          {
            "name": "medium",
            "width": 400,
            "height": 400
          }
        ]
      }
    }
  },
  "Social Links": {
    "social_links": {
      "type": "Group",
      "config": {
        "label": "Social Links",
        "repeat": true,
        "fields": {
          "platform": {
            "type": "Select",
            "config": {
              "label": "Platform",
              "options": [
                "LinkedIn",
                "GitHub",
                "Twitter",
                "Email",
                "Website",
                "Medium",
                "Dev.to",
                "Stack Overflow",
                "YouTube",
                "Twitch"
              ],
              "default_value": "LinkedIn"
            }
          },
          "url": {
            "type": "Link",
            "config": {
              "label": "URL",
              "placeholder": "https://...",
              "allowTargetBlank": true,
              "select": null
            }
          },
          "display_text": {
            "type": "Text",
            "config": {
              "label": "Display Text",
              "placeholder": "Optional custom display text"
            }
          },
          "is_primary": {
            "type": "Boolean",
            "config": {
              "label": "Primary Link",
              "default_value": false,
              "placeholder_false": "Secondary",
              "placeholder_true": "Primary"
            }
          }
        }
      }
    }
  },
  "SEO & Metadata": {
    "meta_title": {
      "type": "Text",
      "config": {
        "label": "Meta Title",
        "placeholder": "Page title for SEO"
      }
    },
    "meta_description": {
      "type": "Text",
      "config": {
        "label": "Meta Description",
        "placeholder": "Page description for SEO (160 characters max)"
      }
    },
    "og_image": {
      "type": "Image",
      "config": {
        "label": "Open Graph Image",
        "constraint": {
          "width": 1200,
          "height": 630
        }
      }
    }
  }
}